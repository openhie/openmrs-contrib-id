<!DOCTYPE html>
<html>

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title><%= title %></title>
	<link rel="stylesheet" href="/resource/style.css">
	<link rel="stylesheet" href="/resource/font/font-awesome.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script src="/resource/omrsid.js"></script>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-40011918-5', 'ohie.org');
		ga('require', 'displayfeatures');
  		ga('send', 'pageview');
	</script>	
	<%- headAppend %>
	
	<!--[if lte IE 7]>
	<link rel="stylesheet" href="/resource/font/font-awesome-ie7.css">
	<![endif]-->
</head>



<body>
<noscript><h3>JavaScript is required to properly use OpenHIE ID.</h3></noscript>
<div id="header">	
	<div class="container">
		<a href="/"><img id="logo" src="/resource/images/logo.png" alt="OpenHIE Community"></a>
		
		
	<div id="login-menu">	
		<% if (!connected) { %>
			<a href="/login" class="popover-trigger" data-popid="login">Log In</a>
			<form action="/login" method="post" class="popover" data-popid="login">
				<input class="use-placeholder" type="text" placeholder="OpenHIE ID" name="loginusername">
				<input class="use-placeholder" type="password" placeholder="Password" name="loginpassword">
				<input type="submit" value="Log In &#187;">
					<span class="failtext">Authentication failed.</span>
					<span><a href="/reset">Password Recovery &#187;</a></span>
			</form>
			<div class="popover-direction" data-popid="login"></div>
		<% } %>
		
		<% if (connected) { %>
			<a href="#" class="popover-trigger" data-popid="login"><%= user[conf.user.displayname] %></a>
			<ul class="popover" data-popid="login">
				<a href="/disconnect"><li>Log Out</li></a>
			</ul>
			<div class="popover-direction" data-popid="login"></div>
		<% } %>
	</div>
		
		
		
		<div class="clear"></div>
	</div>
</div>



<ul id="user-nav">
	<% var list = navLinks; for (var i = 0; i < list.length; i++) { %>	
		<% var same = (name == list[i].viewName) ? true : false %>
		<a<% if (same) { %> class="active"<% } %> href="<%= (same) ? "#" : list[i].url %>">
			<li><% if (list[i].icon) { %><i class="<%= list[i].icon %>"></i><% } %><%= list[i].name %></li>
		</a>
	<% } %>
</ul>



<div id="headline" <% if (showHeadlineAvatar) { %>class="with-avatar"<% } %>>
	<h1><%- headline %>
	<% if (connected && showHeadlineAvatar) { %>
	<img src="https://wiki.ohie.org/rest/cas/1.0/avatar/server/<%= mailHash %>?s=51" alt="<%= user[conf.user.displayname] %>">
	<% } %>
	</h1>
</div>



<% if (flash) { for (type in flash) { %>
<% flash[type].forEach(function(msg){ %>
	<div class="flash <%= type %>">
		<span><%- msg %></span>
	</div>
<% }); } } %>



<div id="content" class="container">
	<div id="main"<% if (showSidebar == false) { %> class="no-sidebar"<% } %>>
	
	<%- body %>
	</div>
	
	<% if (showSidebar == true) { %>
	<div id="sidebar">
		<%- partial('sidebar', sidebar.concat(defaultSidebar)) %>
		<div id="about"><%- aboutHTML %></div>
	</div>
	<% } %>
	
</div>


<div class="clear"></div>
<%- bodyAppend %>

</body>
</html>
