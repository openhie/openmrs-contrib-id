<% name = 'login' %>
<% title = 'OpenHIE ID - Login' %>
<% headline = 'Login with your OpenHIE ID' %>
<% sidebar.unshift('sidebar/id-whatis') %>

<form action="/login" method="post">
	<p><em></em></p>
	<input type="hidden" name="destination" id="redirect-to">
	
	<div class="field<% if (fail.loginusername) {%> fail<% } %>">
		<label>OpenHIE ID</label>
		<input type="text" name="loginusername" placeholder="OpenHIE ID" <% if (failed) { %>value="<%= values.loginusername %>"<% } %> autofocus>
		<span class="description failtext">
			<% if (values.loginusername == '') { %>A username must be supplied to log in.<% }
			else { %>Make sure you are entering your OpenHIE ID, not your email address.<% } %>
		</span>
	</div>
	
	<div class="field<% if (fail.loginpassword) {%> fail<% } %>">
		<label>Password</label>
		<input type="password" name="loginpassword" placeholder="Password">
		<span class="description failtext">
			<% if (values.loginpassword == '') { %>A password must be supplied to log in.<% }
			else { %>If you have forgotten your password, you can <a href="/reset">reset it here</a>.<% } %>
		</span>
	</div>
	<div class="field">
		<input class="btn btn-success" type="submit" value="Login with OpenHIE ID &#187;">
	</div>
</form>
