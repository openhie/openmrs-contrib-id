<% name = 'reset-public' %>
<% title = 'OpenHIE ID - Reset Password' %>
<% headline = 'Reset Your Password' %>
<form action="/reset" method="post" id="reset-form">
	<p>Forgot your password? Enter your OpenHIE ID or your account's primary email address and we'll send you an email with password reset instructions.</p>
		
	<div class="field<% if (fail.resetCredential) { %>fail<% } %>">
		<label>ID / Primary Email</label>
		<input type="text" name="resetCredential" placeholder="OpenHIE ID or Primary Email" autofocus>
		<input type="submit" value="Send Reset Email &#187;">
	</div>
</form>
